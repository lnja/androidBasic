    <style name="BaseTheme" parent="@android:style/Theme.Holo.Light.NoActionBar"/>

    <style name="BaseDialog" parent="@android:style/Theme.Holo.Light.Dialog"/>

    <style name="BaseProgressBar" parent="@android:style/Widget.Holo.Light.ProgressBar"/>

    <style name="BaseListView" parent="@android:style/Widget.Holo.Light.ListView"/>

    <style name="BaseEditText" parent="@android:style/Widget.Holo.Light.EditText">
