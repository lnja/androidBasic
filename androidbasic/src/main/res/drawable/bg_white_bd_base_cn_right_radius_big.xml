<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/gray_darker"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_active"/>

            <stroke android:width="1dp" android:color="@color/base"/>

            <corners android:bottomRightRadius="@dimen/radius_big" android:topRightRadius="@dimen/radius_big"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white"/>

            <stroke android:width="1dp" android:color="@color/base"/>

            <corners android:bottomRightRadius="@dimen/radius_big" android:topRightRadius="@dimen/radius_big"/>
        </shape>
    </item>

</selector>