<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/base_darker"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="top|right" android:src="@drawable/im_selected"/>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/base"/>
                </shape>
            </item>
            <item>
                <bitmap android:gravity="top|right" android:src="@drawable/im_selected"/>
            </item>
        </layer-list>
    </item>

</selector>